{
  "$schema": "https://opencode.ai/theme.json",
  "defs": {
    "bloodInk0": "#0e0a0a",
    "bloodInk1": "#130d0e",
    "bloodInk2": "#1c1214",
    "bloodInk3": "#2a1b1e",
    "bloodRed": "#ff2e3a",
